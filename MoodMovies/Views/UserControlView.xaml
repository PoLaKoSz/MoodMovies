<UserControl x:Class="MoodMovies.Views.UserControlView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:cal="http://www.caliburnproject.org"
             FontFamily="Segoe UI Light"
             mc:Ignorable="d"
             d:DesignHeight="350"
             HorizontalAlignment="Stretch"
             VerticalAlignment="Stretch"
             Width="350"
             xmlns:lex="http://wpflocalizeextension.codeplex.com"
             lex:LocalizeDictionary.DesignCulture="en"
             lex:ResxLocalizationProvider.DefaultAssembly="MoodMovies"
             lex:ResxLocalizationProvider.DefaultDictionary="Strings">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="10" />
            <RowDefinition Height="45" />
            <RowDefinition Height="10" />
            <RowDefinition Height="30" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto"
                           MaxHeight="200" />
            <RowDefinition Height="10" />
            <RowDefinition Height="auto" />
        </Grid.RowDefinitions>

        <materialDesign:Card Grid.Row="1"
                             FontSize="17">
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="160" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Border Grid.Column="0"
                        Background="LightGray"
                        VerticalAlignment="Stretch"
                        HorizontalAlignment="Stretch">
                    <Label Content="{lex:Loc UserControlView_Label_CurrentUser}"
                           FontWeight="SemiBold"
                           VerticalContentAlignment="Center"
                           Foreground="Black" />
                </Border>
                <Border Background="#FFEAE8E8"
                        Grid.Column="1"
                        VerticalAlignment="Stretch"
                        HorizontalAlignment="Stretch">
                    <StackPanel Orientation="Horizontal">
                        <Label Content="{Binding Path=CurrentUser.Name}"
                               VerticalContentAlignment="Center"
                               Margin="5,0,0,0"
                               Foreground="Black" />
                        <Label Content="{Binding Path=CurrentUser.Surname}"
                               VerticalContentAlignment="Center"
                               Margin="5,0,0,0"
                               Foreground="Black" />
                    </StackPanel>
                </Border>
            </Grid>
        </materialDesign:Card>

        <Label Content="Users"
               Grid.Row="3"
               HorizontalAlignment="Left"
               FontSize="17" />

        <materialDesign:Card Grid.Row="5">
            <ListBox ItemsSource="{Binding Path=AllUsers}"
                     SelectedItem="{Binding Path=SelectedUser}">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:Chip Grid.Column="7"
                                                 HorizontalAlignment="Right"
                                                 VerticalAlignment="Center"
                                                 Background="Transparent"
                                                 IconBackground="#FFE1E2E1"
                                                 Height="40"
                                                 Margin="0,0,20,0"
                                                 IconForeground="DarkBlue">
                                <materialDesign:Chip.Icon>
                                    <materialDesign:PackIcon Kind="Account"
                                                             Height="26"
                                                             Width="26" />
                                </materialDesign:Chip.Icon>
                            </materialDesign:Chip>
                            <TextBlock VerticalAlignment="Center"
                                       FontWeight="SemiBold"
                                       FontSize="16">
                                <TextBlock.Text>
                                    <MultiBinding StringFormat="{}{0} {1}">
                                        <Binding Path="Name" />
                                        <Binding Path="Surname" />
                                    </MultiBinding>
                                </TextBlock.Text>
                            </TextBlock>
                        </StackPanel>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </materialDesign:Card>

        <StackPanel Grid.Row="7">
            <Label Content="{lex:Loc LoginView_Label_Email}"
                   Foreground="Black"
                   FontSize="17" />
            <Border CornerRadius="10"
                    BorderBrush="White"
                    BorderThickness="1"
                    Background="White"
                    Height="36"
                    Margin="5"
                    materialDesign:ShadowAssist.ShadowDepth="Depth2">
                <TextBox Margin="15,0,15,0"
                         BorderBrush="Transparent"
                         VerticalAlignment="Stretch"
                         HorizontalAlignment="Stretch"
                         materialDesign:HintAssist.Hint="{lex:Loc LoginView_TextBox_Email_Hint}"
                         materialDesign:HintAssist.HintOpacity="0.5"
                         VerticalContentAlignment="Center"
                         HorizontalContentAlignment="Center"
                         FontSize="17"
                         Text="{Binding Email}" />
            </Border>
            <Label Content="{lex:Loc LoginView_Label_Password}"
                   Foreground="Black"
                   FontSize="17" />
            <Border CornerRadius="10"
                    BorderBrush="White"
                    BorderThickness="1"
                    Background="White"
                    Height="36"
                    Margin="5"
                    materialDesign:ShadowAssist.ShadowDepth="Depth2">
                <TextBox Margin="15,0,15,0"
                         BorderBrush="Transparent"
                         VerticalAlignment="Stretch"
                         HorizontalAlignment="Stretch"
                         materialDesign:HintAssist.Hint="{lex:Loc LoginView_TextBox_Password_Hint}"
                         materialDesign:HintAssist.HintOpacity="0.5"
                         VerticalContentAlignment="Center"
                         HorizontalContentAlignment="Center"
                         FontSize="17"
                         Text="{Binding Password}" />
            </Border>
            <CheckBox Content="{lex:Loc LoginView_Label_KeepMeLoggedIn}"
                      Margin="5,10,0,0"
                      IsChecked="{Binding Path=KeepLoggedIn}" />
            <Button Style="{DynamicResource RoundButton}"
                    Content="{lex:Loc LoginView_Button_Login}"
                    cal:Message.Attach="Login"
                    Grid.Row="2"
                    Grid.Column="1"
                    Width="175"
                    Margin="0,20,0,0"
                    Background="{StaticResource SecondaryAccentLightBrush}" />
        </StackPanel>
    </Grid>
</UserControl>
