<UserControl x:Class="MoodMovies.Views.AboutView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MoodMovies.Views"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:cal="http://www.caliburnproject.org"
             Background="{DynamicResource MaterialDesignPaper}"
             FontFamily="century gothic"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300" FontSize="18">
    <Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
        <Grid.RowDefinitions>
            <RowDefinition Height="0.3*"/>
            <RowDefinition Height="7*"/>
            <RowDefinition Height="0.8*"/>
        </Grid.RowDefinitions>
        
        <Grid  Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="0.7*"/>
                <ColumnDefinition Width="6*"/>
                <ColumnDefinition Width="0.7*"/>
            </Grid.ColumnDefinitions>
            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="0.7*"/>
                    <RowDefinition Height="9*"/>
                </Grid.RowDefinitions>
                <TextBlock x:Name="DisplayName" Grid.Row="0" HorizontalAlignment="Left" VerticalAlignment="center" 
                   Foreground="{StaticResource PrimaryHueMidBrush}" Style="{StaticResource MaterialDesignHeadlineTextBlock}" Margin="20,0,0,0"/>
                
                <materialDesign:Card  Grid.Row="1" Margin="10" VerticalAlignment="Top" HorizontalContentAlignment="Center" HorizontalAlignment="Stretch" Foreground="{StaticResource SecondaryAccentBrush}">
                    <DockPanel  HorizontalAlignment="Stretch">
                        <Expander DockPanel.Dock="Top" HorizontalAlignment="Stretch" Header=" Credits" FontSize="20" IsExpanded="{Binding Path=CreditsExpanderIsOpen}" 
                                  cal:Message.Attach="[Event Expanded] = [Action CloseExpanders]" Background="#FF252526">
                            <ScrollViewer DockPanel.Dock="Top" VerticalScrollBarVisibility="Hidden" HorizontalScrollBarVisibility="Hidden" Height="{Binding ElementName=MainCard, Path=ActualHeight}"
                                          Background="#FF5C5C5C">
                                <TextBlock Text="This is where text about the open source libraries and tools used are mentioned." Foreground="{StaticResource PrimaryHueDarkForegroundBrush}" 
                                   VerticalAlignment="Stretch" HorizontalAlignment="Center" TextAlignment="Center" FontSize="19" />
                            </ScrollViewer>
                        </Expander>
                        <Expander DockPanel.Dock="Top" HorizontalAlignment="Stretch" Header=" Creator" FontSize="20" IsExpanded="{Binding Path=CreatorExpanderIsOpen}" 
                                  cal:Message.Attach="[Event Expanded] = [Action CloseExpanders]" Background="#FF252526">
                            <ScrollViewer DockPanel.Dock="Top" VerticalScrollBarVisibility="Hidden" HorizontalScrollBarVisibility="Hidden" Height="{Binding ElementName=MainCard, Path=ActualHeight}"
                                          Background="#FF5C5C5C">
                                <TextBlock Text="This is where text about the developer is mentioned and anyone who assisted are mentioned." Foreground="{StaticResource PrimaryHueDarkForegroundBrush}" 
                                   VerticalAlignment="Stretch" HorizontalAlignment="Center" TextAlignment="Center" FontSize="19" />
                            </ScrollViewer>
                        </Expander>
                        <Expander x:Name="MainCard" DockPanel.Dock="Top" HorizontalAlignment="Stretch" Header=" Software License" IsExpanded="{Binding Path=LicenseExpanderIsOpen}" 
                                  cal:Message.Attach="[Event Expanded] = [Action CloseExpanders]" Background="#FF252526">
                            <ScrollViewer DockPanel.Dock="Top" VerticalScrollBarVisibility="Hidden" HorizontalScrollBarVisibility="Hidden" Height="{Binding ElementName=MainCard, Path=ActualHeight}"
                                          Background="#FF5C5C5C">
                                <TextBlock x:Name="License" Foreground="{StaticResource PrimaryHueDarkForegroundBrush}" 
                                   VerticalAlignment="Stretch" HorizontalAlignment="Center" TextAlignment="Center" FontSize="19" />
                            </ScrollViewer>
                        </Expander>
                    </DockPanel>
                </materialDesign:Card>
            </Grid>            
        </Grid>               
    </Grid>
</UserControl>
