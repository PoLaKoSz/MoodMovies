<UserControl x:Class="MoodMovies.Views.MovieCardView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MoodMovies.Views"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d" 
             d:DesignHeight="500" d:DesignWidth="300"
             FontFamily="century gothic">
    <Grid Width="300" Height="500">
        <materialDesign:DrawerHost 
            Margin="0" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"    
	        BorderThickness="0" RightDrawerBackground="#D8303030">
            <materialDesign:DrawerHost.RightDrawerContent>
                <Grid  Width="260" Height="500" VerticalAlignment="Stretch" Margin="5,5,8,5">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="4*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <TextBlock Grid.Row="0" Text="{Binding Path=Title}" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="{StaticResource PrimaryHueMidBrush}" 
                               Margin="0,5,0,0" FontSize="20" TextOptions.TextFormattingMode="Display" TextAlignment="Right"/>
                    <TextBlock TextWrapping="WrapWithOverflow" Grid.Row="1" Text="{Binding Path=Overview}" HorizontalAlignment="Center" Foreground="{StaticResource SecondaryAccentBrush}" 
                               Margin="5,0,0,0" FontSize="17" TextOptions.TextFormattingMode="Display" TextAlignment="Right"/>
                    <Grid Grid.Row="2">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Text="Released: " HorizontalAlignment="Right" VerticalAlignment="Center" Foreground="{StaticResource SecondaryAccentBrush}" 
                               Margin="0,5,0,0" FontSize="17" TextOptions.TextFormattingMode="Display" TextAlignment="Center"/>
                        <TextBlock Grid.Column="1" Text="{Binding Path=ReleaseDate}" HorizontalAlignment="Right" VerticalAlignment="Center" Foreground="{StaticResource PrimaryHueMidBrush}" 
                               Margin="0,5,0,0" FontSize="17" TextOptions.TextFormattingMode="Display" TextAlignment="Center"/>
                    </Grid>
                    <Grid Grid.Row="3">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Text="Language: " HorizontalAlignment="Right" VerticalAlignment="Center" Foreground="{StaticResource SecondaryAccentBrush}" 
                               Margin="0,5,0,0" FontSize="17" TextOptions.TextFormattingMode="Display" TextAlignment="Center"/>
                        <TextBlock Grid.Column="1" Text="{Binding Path=Language}" HorizontalAlignment="Right" VerticalAlignment="Center" Foreground="{StaticResource PrimaryHueMidBrush}" 
                               Margin="0,5,0,0" FontSize="17" TextOptions.TextFormattingMode="Display" TextAlignment="Center"/>
                    </Grid>
                    <Grid Grid.Row="4">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Text="No. of Votes: " HorizontalAlignment="Right" VerticalAlignment="Center" Foreground="{StaticResource SecondaryAccentBrush}" 
                               Margin="0,5,0,0" FontSize="17" TextOptions.TextFormattingMode="Display" TextAlignment="Center"/>
                        <TextBlock Grid.Column="1" Text="{Binding Path=VoteCount}" HorizontalAlignment="Right" VerticalAlignment="Center" Foreground="{StaticResource PrimaryHueMidBrush}" 
                               Margin="0,5,0,0" FontSize="17" TextOptions.TextFormattingMode="Display" TextAlignment="Center"/>
                    </Grid>
                    <Grid Grid.Row="5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Text="Popularity: " HorizontalAlignment="Right" VerticalAlignment="Center" Foreground="{StaticResource SecondaryAccentBrush}" 
                               Margin="0,5,0,0" FontSize="17" TextOptions.TextFormattingMode="Display" TextAlignment="Center"/>
                        <ProgressBar  Grid.Column="1" Value="{Binding Path=Popularity}" HorizontalAlignment="Stretch" VerticalAlignment="Center" VerticalContentAlignment="Center"
                                      MinHeight="15" Foreground="{StaticResource PrimaryHueMidBrush}" Background="{StaticResource PrimaryHueDarkBrush}" 
                               Margin="0,6,0,0" FontSize="17" TextOptions.TextFormattingMode="Display" Minimum="0" Maximum="100" FlowDirection="RightToLeft"/>                       
                    </Grid>
                    

                    <Button Grid.Row="6" Margin="2" Command="{x:Static materialDesign:DrawerHost.CloseDrawerCommand}"
				        CommandParameter="{x:Static Dock.Right}"
				        Style="{DynamicResource MaterialDesignFlatButton}" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" Height="Auto" Content="Close"/>
                </Grid>
            </materialDesign:DrawerHost.RightDrawerContent>
            <materialDesign:Card Padding="0" Margin="10" materialDesign:ShadowAssist.ShadowDepth="Depth5" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="0.4*"/>
                        <RowDefinition Height="4*"/>
                        <RowDefinition Height="0.5*"/>
                        <RowDefinition Height="0.5*"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>

                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Row="0" Text="{Binding Path=Title}" Style="{StaticResource MaterialDesignTitleTextBlock}" TextAlignment="Center" VerticalAlignment="Center" HorizontalAlignment="Stretch" Foreground="{StaticResource SecondaryAccentBrush}"/>
                    <!--<Image Grid.Row="1" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Source="/MoodMovies;component/Images/testImage.jpg"   />-->
                    <TextBlock Grid.Row="1">
                        <Hyperlink Command="{x:Static materialDesign:DrawerHost.OpenDrawerCommand}"
				        CommandParameter="{x:Static Dock.Right}" TextDecorations="{x:Null}">
                            <Image Source="{Binding Path=ImagePath}" VerticalAlignment="Stretch" Stretch="Fill" />
                        </Hyperlink>
                    </TextBlock>
                    <!--ratings and fav button-->
                    <Grid Grid.Row="2">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="1.5*"/>
                            <ColumnDefinition Width="0.5*"/>
                            <ColumnDefinition Width="0.5*"/>
                        </Grid.ColumnDefinitions>
                        <materialDesign:RatingBar Grid.Column="0" x:Name="MovieRatingBar" Value="3"  Background="{StaticResource SecondaryAccentBrush}" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                        <ToggleButton Grid.Column="1" Style="{StaticResource MaterialDesignActionToggleButton}"	ToolTip="Add to WatchList" Background="#FF424242">
                            <ToggleButton.Content>
                                <materialDesign:PackIcon  Kind="Bookmark"/>
                            </ToggleButton.Content>
                            <materialDesign:ToggleButtonAssist.OnContent >
                                <materialDesign:PackIcon Kind="Bookmark" Foreground="Green" />
                            </materialDesign:ToggleButtonAssist.OnContent>
                        </ToggleButton>
                        <ToggleButton Grid.Column="2" Style="{StaticResource MaterialDesignActionToggleButton}"	ToolTip="Add to Favourites" Background="#FF424242">
                            <ToggleButton.Content>
                                <materialDesign:PackIcon  Kind="Heart"/>
                            </ToggleButton.Content>
                            <materialDesign:ToggleButtonAssist.OnContent >
                                <materialDesign:PackIcon Kind="Heart" Foreground="Red" />
                            </materialDesign:ToggleButtonAssist.OnContent>
                        </ToggleButton>

                    </Grid>
                    <TextBlock Grid.Row="3" Text="Details Go here or maybe a button or maybe some kind of popup/ dialog" TextAlignment="Center" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" TextWrapping="Wrap" Foreground="{StaticResource PrimaryHueLightForegroundBrush}"/>
                </Grid>
            </materialDesign:Card>
        </materialDesign:DrawerHost>
    </Grid>
</UserControl>
